extends layout

block content


    h1.text-xs-center #{title}

    p
      form#formAddUser(name="adduser", method="post", action="/")
          input#inputUserName(type="text", placeholder="Username", name="username")
          input#inputUserEmail(type="text", placeholder="Email", name="useremail")
          input#inputUserMessage(type="text", placeholder="Message", name="usermessage")
          button#btnSubmit(type="submit") Add Guest

    table.table
      thead
        td Name:
        td Email:
        td Message:
        td
      tbody
        each user, i in userlist
          tr
            td
              a(href="#{user.username}")= user.username
            td= user.email
            td= user.message
            td
              a(href="#{user._id}/delete/")
                .btn.btn-danger Remove
